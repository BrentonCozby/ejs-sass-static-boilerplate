{
    "name": "ejs-sass-static-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for a Static website using EJS and SASS",
    "main": "index.js",
    "scripts": {
        "start": "browser-sync start --server 'dist' --files 'dist' --no-open --no-notify --reload-debounce 100",
        "dev": "NODE_ENV=development yarn setup-for-dev && npm-run-all --parallel start watch:*",
        "prod": "NODE_ENV=production npm-run-all --sequential rmprod copy-to-dist minify:js minify:css prepend-banner hash-filenames minify:html purge:css",
        "setup-for-dev": "npm-run-all --sequential rmprod copy-to-dist build:html",
        "build:html": "NODE_ENV=production babel-node build-tools/ejs-to-html.js",
        "build:js": "webpack --debug",
        "build:css": "yarn sass && yarn autoprefixer",
        "watch:html": "NODE_ENV=development babel-node build-tools/ejs-to-html.js --watch",
        "watch:js": "webpack --watch --debug --display minimal",
        "watch:css": "yarn sass && node-sass src/css --output dist/css --source-map true --watch --recursive --quiet",
        "minify:html": "yarn build:html && babel-node build-tools/minify-html.js",
        "minify:js": "webpack -p",
        "minify:css": "yarn build:css && babel-node build-tools/minify-css.js",
        "purge:css": "purgecss --css dist/css/*.css --out dist/css/ --content dist/**/*.html dist/js/**/*.js",
        "sass": "node-sass src/css -o dist/css --source-map-embed true",
        "autoprefixer": "postcss dist/css/**/*.css --use autoprefixer -r",
        "copy-to-dist": "babel-node build-tools/copy-to-dist.js",
        "hash-filenames": "babel-node build-tools/hash-filenames.js",
        "prepend-banner": "babel-node build-tools/prepend-banner.js",
        "rmprod": "rimraf filename-map.json && rimraf dist",
        "eslint": "eslint"
    },
    "author": "Brenton Cozby",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^7.2.3",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-preset-stage-0": "^6.24.1",
        "browser-sync": "^2.21.0",
        "clean-css": "^4.1.9",
        "ejs": "^2.5.7",
        "eslint": "^4.14.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "html-minifier": "^3.5.8",
        "node-sass": "^4.7.2",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^4.1.1",
        "purgecss": "^0.19.0",
        "rimraf": "^2.6.2",
        "webpack": "^3.10.0"
    },
    "dependencies": {
        "lazysizes": "^4.0.1",
        "lodash.throttle": "^4.1.1",
        "picturefill": "^3.0.2",
        "sanitize-html": "^1.16.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BrentonCozby/ejs-sass-static-boilerplate.git"
    },
    "keywords": [
        "EJS",
        "SASS",
        "Webpack",
        "Boilerplate",
        "Static",
        "NodeJS"
    ],
    "bugs": {
        "url": "https://github.com/BrentonCozby/ejs-sass-static-boilerplate/issues"
    },
    "homepage": "https://github.com/BrentonCozby/ejs-sass-static-boilerplate#readme"
}
