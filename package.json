{
    "name": "ejs-sass-static-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for a Static website using EJS and SASS",
    "main": "index.js",
    "scripts": {
        "start": "serve dist",
        "build:html": "babel-node build-tools/ejs-to-html.js",
        "build:js": "webpack",
        "build:css": "npm run sass && npm run autoprefixer",
        "watch:html": "babel-node build-tools/ejs-to-html.js --watch",
        "watch:js": "webpack -w",
        "watch:css": "npm run sass && node-sass -w src/css -o dist/css",
        "minify:html": "npm run build:html && babel-node build-tools/minify-html.js",
        "minify:js": "webpack -p",
        "minify:css": "npm run build:css && babel-node build-tools/minify-css.js",
        "sass": "node-sass src/css -o dist/css",
        "autoprefixer": "postcss dist/css/**/*.css --use autoprefixer -r",
        "copy-to-dist": "babel-node build-tools/copy-to-dist.js",
        "hash-filenames": "babel-node build-tools/hash-filenames.js",
        "build:sw": "babel-node build-tools/build-service-worker.js",
        "rmprod": "rimraf filename-map.json && rimraf dist",
        "setup-for-dev": "npm run rmprod && npm run copy-to-dist && npm run build:js && npm run build:css && npm run build:html && npm run build:sw",
        "prod": "rimraf dist && npm run minify:js && npm run minify:css && npm run copy-to-dist && npm run hash-filenames && npm run minify:html && npm run build:sw"
    },
    "author": "Brenton Cozby",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^7.1.2",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-0": "^6.24.1",
        "clean-css": "^4.1.7",
        "dotenv": "^4.0.0",
        "ejs": "^2.5.7",
        "html-minifier": "^3.5.3",
        "node-sass": "^4.5.3",
        "postcss-cli": "^4.1.0",
        "rimraf": "^2.6.1",
        "serve": "^6.0.6",
        "sw-precache": "^5.2.0",
        "webpack": "^3.5.5"
    },
    "dependencies": {
        "jquery": "^3.2.1",
        "lodash.throttle": "^4.1.1",
        "sanitize-html": "^1.14.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BrentonCozby/ejs-sass-static-boilerplate.git"
    },
    "keywords": [
        "EJS",
        "SASS",
        "Webpack",
        "Boilerplate",
        "Static",
        "NodeJS"
    ],
    "bugs": {
        "url": "https://github.com/BrentonCozby/ejs-sass-static-boilerplate/issues"
    },
    "homepage": "https://github.com/BrentonCozby/ejs-sass-static-boilerplate#readme"
}
