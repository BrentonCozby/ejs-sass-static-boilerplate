{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-fallthrough": "off",
        "arrow-parens": "off",
        "consistent-return": "off",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "arrow-body-style": "off",
        "comma-dangle": "off",
        "padded-blocks": "off"
    },
    "globals": {
        "NODE_ENV": false,
        "PP": false,
        "SITE_TITLE": false,
        "SITE_NAME": false,
        "DESCRIPTION": false,
        "SITE_URL": false,
        "DEVELOPER_NAME": false,
        "DEVELOPER_URL": false,
        "GOOGLE_ANALYTICS_ID": false,
        "DEV_PATH": false,
        "$": false,
        "libs": false
    }
}
